    podman exec mariadb-container \
      env MYSQL_PWD="$MYSQL_ROOT_PASS" \
      mysql -u root -e "DROP DATABASE \`$DB_NAME\`;"
    echo "ğŸ—‘ï¸ Banco '$DB_NAME' removido. SerÃ¡ recriado em seguida."
  else
    echo "ğŸš« InstalaÃ§Ã£o abortada para evitar sobrescrita do banco."
    exit 1
  fi
fi


# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ› ï¸ Criando banco de dados, usuÃ¡rio e permissÃµes no MariaDB
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
