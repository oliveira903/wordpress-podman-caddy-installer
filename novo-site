  echo "ğŸ”„ Container '$CONTAINER_NAME' jÃ¡ existe."
  if [ "$(podman inspect -f '{{.State.Running}}' "$CONTAINER_NAME")" != "true" ]; then
    echo "âš ï¸ Container '$CONTAINER_NAME' estÃ¡ parado. Removendo..."
    podman rm "$CONTAINER_NAME"
  else
    echo "âœ… Container jÃ¡ estÃ¡ rodando. Pulando criaÃ§Ã£o."
  fi
fi

if ! podman container exists "$CONTAINER_NAME"; then
podman run -d \
  --name "$CONTAINER_NAME" \
  --network shared_network \
  -v "$SITE_DIR":/var/www/html \
