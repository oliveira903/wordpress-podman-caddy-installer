  podman exec "$CONTAINER_NAME" chmod 644 /var/www/html/wp-config.php 2>/dev/null
  echo "âœ… PermissÃµes ajustadas com sucesso!"
else
  echo "â„¹ï¸ wp-config.php nÃ£o estÃ¡ presente dentro do container (esperado). Pulando ajuste de permissÃµes."
