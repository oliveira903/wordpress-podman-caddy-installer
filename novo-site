  echo
  read -s -p "ğŸ”‘ Informe a senha do root do MariaDB (tentativa $TRIES de $MAX): " TENTATIVA_PASS
  echo -e "\nâ³ Testando conexÃ£o com o banco..."

  if podman run --rm --network container:mariadb-container \
    --env MYSQL_PWD="$TENTATIVA_PASS" \
    docker.io/mysql:5.7 \
    mysqladmin ping -u root -h127.0.0.1 --silent &>/dev/null; then
    MYSQL_ROOT_PASS="$TENTATIVA_PASS"  # âœ… agora Ã© visÃ­vel fora do loop
    break
  else
    echo "âŒ Senha incorreta."
  fi

  ((TRIES++))
  [ $TRIES -gt $MAX ] && echo "â›” Senha incorreta $MAX vezes. Cancelando." && set -o history && exit 1
  sleep 1
