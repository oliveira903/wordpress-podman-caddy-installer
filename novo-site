CREDENTIALS_FILE="$SITE_DIR/.env"
cat <<EOF > "$CREDENTIALS_FILE"
DB_NAME=$DB_NAME
DB_USER=$DB_USER
DB_PASS=$DB_PASS
EOF
chmod 600 "$CREDENTIALS_FILE"
