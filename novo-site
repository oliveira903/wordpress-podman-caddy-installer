podman run --rm \
  -v "$CADDY_DIR":/etc/caddy \
  docker.io/caddy:latest caddy validate --config /etc/caddy/Caddyfile

if [ $? -ne 0 ]; then
  echo "âŒ Erro de validaÃ§Ã£o no Caddyfile"
  exit 1
fi

# ğŸ” Recarregando Caddy
echo -e "\nğŸ” Recarregando Caddy..."
podman exec caddy caddy reload --config /etc/caddy/Caddyfile

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ” Reiniciando container WordPress com Apache rodando
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

echo -e "\nğŸ” Reiniciando container WordPress no modo final..."
podman stop "$CONTAINER_NAME" >/dev/null || true
podman rm "$CONTAINER_NAME" >/dev/null || true

podman run -d \
  --name "$CONTAINER_NAME" \
  --network shared_network \
  -v "$SITE_DIR":/var/www/html \
  -e WORDPRESS_DB_HOST="mariadb-container" \
  -e WORDPRESS_DB_NAME="$DB_NAME" \
  -e WORDPRESS_DB_USER="$DB_USER" \
  -e WORDPRESS_DB_PASSWORD="$DB_PASS" \
  docker.io/library/wordpress:latest

if [ $? -eq 0 ]; then
  echo "âœ… Container '$CONTAINER_NAME' reiniciado com sucesso!"
else
  echo "âŒ Erro ao reiniciar o container '$CONTAINER_NAME'."
  exit 1
fi

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸ” Teste de ConexÃ£o com o WordPress (dentro do container)
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

echo -e "\nğŸ”” Testando ConexÃ£o com o WordPress (internamente)..."
printf "â³ Aguardando conexÃ£o com o WordPress"

for ((i = 1; i <= 60; i++)); do
  HTTP_CODE=$(podman exec "$CONTAINER_NAME" curl -s -o /dev/null -w "%{http_code}" http://localhost/wp-login.php)

  if [[ "$HTTP_CODE" == "200" || "$HTTP_CODE" == "302" ]]; then
    echo -e "\nâœ… WordPress respondendo corretamente dentro do container!"
    break
  fi

  # Mostra logs a partir do 30s
  if [ "$i" -eq 30 ]; then
    echo -e "\nğŸ“ Logs parciais do container:"
    podman logs "$CONTAINER_NAME" | tail -n 10
  fi

  printf "."
  sleep 1
done

if [[ "$HTTP_CODE" != "200" && "$HTTP_CODE" != "302" ]]; then
  echo -e "\nâŒ O WordPress nÃ£o respondeu apÃ³s 60 segundos (nem mesmo internamente)."
  echo "ğŸ” Logs completos:"
  podman logs "$CONTAINER_NAME"
  exit 1
fi

