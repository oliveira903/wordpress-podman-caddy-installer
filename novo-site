  env MYSQL_PWD="$MYSQL_ROOT_PASS" \
  mysql -u root -N -B -e "USE \`$DB_NAME\`; SHOW TABLES LIKE 'wp_options';")

if [[ -n "$EXISTE_TABELA" ]]; then
  echo "âš ï¸ Banco '$DB_NAME' jÃ¡ possui instalaÃ§Ã£o do WordPress. Deseja apagar o banco para nova instalaÃ§Ã£o? (s/N)"
  read -r RESET_DB
