SITE_DIR="/home/site4have/sites/$SITE_NAME"

if [ -d "$SITE_DIR" ]; then
  echo "âš ï¸ O diretÃ³rio $SITE_DIR jÃ¡ existe. Deseja sobrescrever? (s/N)"
  read -r CONFIRM
  [[ "$CONFIRM" =~ ^[sS]$ ]] || exit 1
